@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<MudItem xs="6" sm="2" Class="d-flex justify-center">
    <MudSelect @bind-Value="Value"
               T="string"
               Variant="@GetVariant()"
               Label="@GetLabel()">
        @foreach (var opt in GetOptions())
        {
            <MudSelectItem T="string"
                           Value="@opt.Value">@opt.Text</MudSelectItem>
        }
    </MudSelect>
</MudItem>