@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<MudItem Class="d-flex align-center" xs="3">
    <MudButton Class="ml-2" Variant="Variant.Outlined" OnClick="AddRank">@_TextMap[Rank]</MudButton>
</MudItem>

<MudItem xs="9">
    <MudAvatar Class="ml-3" Variant="Variant.Filled" Color="@GetColor(0)">@_ValueMap[Rank][0]</MudAvatar>
    <MudAvatar Variant="Variant.Filled" Color="@GetColor(1)">@_ValueMap[Rank][1]</MudAvatar>
    <MudAvatar Variant="Variant.Filled" Color="@GetColor(2)">@_ValueMap[Rank][2]</MudAvatar>
    <MudAvatar Variant="Variant.Filled" Color="@GetColor(3)">@_ValueMap[Rank][3]</MudAvatar>
    <MudAvatar Variant="Variant.Filled" Color="@GetColor(4)">@_ValueMap[Rank][4]</MudAvatar>
</MudItem>
